{% extends 'base.html.twig' %}

{% block title %}Notre programmation - Cinéma Aurora{% endblock %}

{% block body %}
  <div class="actions" style="justify-content:space-between">
    <h1 style="margin:0">Programmation</h1>
  </div>
  <p class="muted">Tous les films actuellement à l’affiche et leurs séances.</p>

  <div class="movies">
    {% for film in films %}
    <!-- Film 1 -->
    <article class="movie">
  <div class="poster">
    {% if film.image %}
      <img src="{{ asset('uploads/' ~ film.image) }}" alt="{{ film.titre }}" />
    {% endif %}
  </div>
      <div>
  <h3>{{ film.titre }}</h3>
  <p class="muted">{{ film.genre }} · {{ film.duree }} min · {{ film.langue }}</p>
        <h4>Séances</h4>
        <ul>
          {% for seance in film.seances %}
          <li class="seance-item">
            <span class="seance-time">{{ seance.datetime|date('d/m H:i') }}</span>
            {% if app.user %}
              {% if not seancesCompletes[seance.id] %}
                <form method="get" action="{{ path('app_reservation') }}" class="seance-form" autocomplete="off">
                  <div class="place-selector">
                    <label for="places_{{ seance.id }}">Places :</label>
                    <input type="number" id="places_{{ seance.id }}" name="nombre_places" min="1" max="10" value="1" required>
                  </div>
                  <input type="hidden" name="film" value="{{ film.id }}">
                  <input type="hidden" name="seance" value="{{ seance.id }}">
                  <button type="submit" class="btn small primary">Réserver</button>
                </form>
              {% else %}
                <span class="btn small disabled" style="background:#ccc;cursor:not-allowed;">Séance complète</span>
              {% endif %}
            {% else %}
              <a class="btn small" href="{{ path('app_login') }}">Se connecter pour réserver</a>
            {% endif %}
          </li>
          {% endfor %}
        </ul>
      </div>
    </article>
    {% endfor %}
      </div>
{% endblock %}
